= render partial: "search_header"
.search_main
  =render @products
= render partial: "search_footer"

:css
  .search_main{
  margin: 40px 210px; 
  }
  .contents{
    position: relative;
    color: #000;
    width: 160px;
    height: 218px;
    background-color: #fff;
    display: inline-block;
    margin: 5px;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.5);
  }
  .contents:hover{
    outline: 2px solid #3ccace;
  }
  .content{
    width: 160px;
    height: 160px;
    overflow: hidden;
  }
  ._products-index-image{
    width: 160px;
    height: 160px;
    margin:0 auto; 
    object-fit: cover; 
  }
  ._products-index-image:hover{
    transform:scale(1.2,1.2);
    transition:0.3s all;


  }
  .discription{
    padding: 0;

  }
  .discription p{
    font-size: 14px;
    margin: 0;
    padding: 2px 10px;
  }

  .products-index-title{
    width: 160px;
    height: 58px;
    overflow: hidden;
  }

  .products-index-price{
    position: absolute;
    top: 130px;
    display: inline-block;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    border-radius: 0 9px 9px 0;
  }
  .products-index-price::before{
    content:'ï¿¥';
  }
