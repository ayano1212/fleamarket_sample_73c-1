.header
  .header__inner
    .inner__main
      .main__icon
        = link_to root_path do
          =image_tag('logo.png', class: "icon__image")
      .main__search
        = search_form_for @search ,class: "search-form", url: search_products_path do |f| 
          = f.text_field :title_or_description_cont_any, placeholder: "投稿を検索する", class: "search-input" 
          = f.button "", class: "search-btn"
    .inner__nav
      .nav__left
        .left__category
          .category__btn=link_to "カテゴリー", categories_path
        .left__brand
          .brand__btn
          .category__btn=link_to "ブランド", categories_path
      .nav__right
        - if user_signed_in?
          .right__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout__btn"
          .right__mypage
            = link_to "マイページ", user_path(current_user.id), class: "mypage__btn"
        - else
          .right__login
            = link_to "ログイン", new_user_session_path, class: "login__btn"
          .right__new
            = link_to "新規登録", new_user_registration_path, class: "new__btn"