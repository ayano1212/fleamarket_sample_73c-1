.header
  .header__inner
    .inner__main
      .main__icon
        = link_to root_path do
          =image_tag('logo.png', class: "icon__image")
      .main__search
        = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form| 
          = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" 
          = form.submit "検索", class: "search-btn"
    .inner__nav
      .nav__left
        .left__category
          .category__btn=link_to "カテゴリー", categories_path
        .left__brand
          .brand__btn
          ブランド
      .nav__right
        - if user_signed_in?
          .right__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout__btn"
          .right__mypage
            = link_to "マイページを見る", user_path(current_user.id), class: "mypage__btn"
        - else
          .right__login
          = link_to "ログイン", new_user_session_path, class: "login__btn"
          .right__new
          = link_to "新規登録", new_user_registration_path, class: "new__btn"