= render partial: "devise-header"
.main-contents
  %h2 プロフィール登録
  = form_for @profile do |f|
    = render "devise/shared/error_messages", resource: @profile
    .field-wapper
      .field
        = f.label :お名前（全角）
        %p.required 必須
        %ul
          %li= f.text_field :family_name, class: "input__small", pattern: "[^\x20-\x7E]*", placeholder: "例）古居間"
          %li= f.text_field :first_name, class: "input__small", pattern: "[^\x20-\x7E]*", placeholder: "例）ぷりお"
        - if @profile.errors.include?(:family_name)
          %p.error_message= @profile.errors.full_messages_for(:family_name).first
        - if @profile.errors.include?(:first_name)
          %p.error_message= @profile.errors.full_messages_for(:first_name).first
      .field
        = f.label :お名前カナ（全角）
        %p.required 必須
        %ul
          %li= f.text_field :family_name_kana, class: "input__small", pattern: "[\u30A1-\u30F6]*", placeholder: "例）フルイマ"
          %li= f.text_field :first_name_kana, class: "input__small", pattern: "[\u30A1-\u30F6]*", placeholder: "例）プリオ"
        - if @profile.errors.include?(:family_name_kana)
          %p.error_message= @profile.errors.full_messages_for(:family_name_kana).first
        - if @profile.errors.include?(:first_name_kana)
          %p.error_message= @profile.errors.full_messages_for(:first_name_kana).first
      .field.field_date
        = f.label :生年月日
        %p.required 必須
        %ul
          %li= f.select :birth_year, [                                        |
