.header
  .header-logo
    = link_to image_tag('logo.png', class: "header-logo__image"), root_path
  .header-topic-path
    %ul
      %li 会員情報
      %li プロフィール
      %li 住所
      %li 完了
    .header-topic-path__status
      .status__border
        .status__border__point#point1
        .status__border__point#point2
        .status__border__point#point3
        .status__border__point#point4

.main-contents
  %h2.page-title 会員情報入力
  = form_for(@user, url: user_registration_path) do |f|
    = render "devise/shared/error_messages", resource: @user
    .field-wapper
      .field
        = f.label :ニックネーム
        %span.required 必須
        %br/
        = f.text_field :nickname, class: "input", placeholder: "例）フリマ二郎"
      .field
        = f.label :メールアドレス
        %span.required 必須
        %br/
        = f.email_field :email, class: "input", autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
      .field
        = f.label :パスワード
        %span.required 必須
        %br/
        = f.password_field :password, class: "input", autocomplete: "new-password", pattern: "^([a-zA-Z0-9]{7,24})$", placeholder: "7〜24文字の半角英数字"
      .field
        = f.label :パスワード（確認用）
        %span.required 必須
        %br/
        = f.password_field :password_confirmation, class: "input", autocomplete: "new-password", pattern: "^([a-zA-Z0-9]{7,24})$", placeholder: "7〜24文字の半角英数字"
      %br/
    .actions
      = f.submit "次へ進む", class: "button__next"
    %br/
  .button_login
    = render "devise/shared/links"

.footer
  %ul.footer-list
    %li= link_to "プライバシーポリシー", root_path   
    %li= link_to "FURIMA利用規約", root_path   
  .footer-logo
    = link_to image_tag('logo-white.png', class: "footer-logo__image"), root_path   
    %p ©️ FURIMA,Inc.
