<h2>住所情報登録</h2>

<%= form_for @destination do |f| %>
  <%= render "devise/shared/error_messages", resource: @destination %>

  <div class="field">
    <%= f.label :お名前 %><span class="required">【必須】</span><br>
    <%= f.text_field :destination_family_name, placeholder: "例）古山" %>
    <%= f.text_field :destination_first_name, placeholder: "例）二郎" %>
  </div>

  <div class="field">
    <%= f.label :お名前（かな） %><span class="required">【必須】</span><br>
    <%= f.text_field :destination_family_name_kana, pattern: "[\u3041-\u3096]*", placeholder: "例）ふるやま" %>
    <%= f.text_field :destination_first_name_kana, pattern: "[\u3041-\u3096]*", placeholder: "例）じろう" %>
  </div>

    <div class="field">
    <%= f.label :郵便番号 %><span class="required">【必須】</span><br>
    <%= f.text_field :postal_code, pattern: "^([0-9]{7})$", placeholder: "XXXXXXX" %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><span class="required">【必須】</span><br>
    <%= f.text_field :prefecture %>
  </div>

  <div class="field">
    <%= f.label :市区町村 %><span class="required">【必須】</span><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :番地 %><span class="required">【必須】</span><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :建物 %><span class="required">【任意】</span><br>
    <%= f.text_field :building %>
  </div>

    <div class="field">
    <%= f.label :電話番号 %><span class="required">【必須】</span><br>
    <%= f.text_field :phone_number, pattern: "^([0-9]{10,11})$" %>
  </div><br />

  <div class="actions">
    <%= f.submit "登録" %>
  </div><br />
<% end %>

<%= render "devise/shared/links" %>